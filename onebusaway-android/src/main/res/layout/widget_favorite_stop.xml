<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <!-- Header section -->
    <RelativeLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_header_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <!-- Stop name and dropdown container -->
        <LinearLayout
            android:id="@+id/stop_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/app_icon"
            android:layout_toStartOf="@+id/widget_refresh"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/stop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dropdown_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_dropdown_arrow" />
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_refresh_white_24dp" />
    </RelativeLayout>

    <!-- Status section -->
    <TextView
        android:id="@+id/direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_header"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#F5F5F5"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <!-- Arrivals container - styled to match app -->
    <LinearLayout
        android:id="@+id/arrivals_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction"
        android:orientation="vertical"
        android:background="@color/stop_info_arrival_list_background">

        <!-- This is where arrivals will be added programmatically -->
        <TextView
            android:id="@+id/no_arrivals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout> 