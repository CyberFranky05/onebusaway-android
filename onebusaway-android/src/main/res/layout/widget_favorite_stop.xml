<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <!-- Header section - positioned to overlap the top edge -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_header_background"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <!-- Stop name with dropdown -->
        <LinearLayout
            android:id="@+id/stop_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/stop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dropdown_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dropdown_arrow" />
        </LinearLayout>

        <!-- Refresh button -->
        <ImageView
            android:id="@+id/widget_refresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_refresh_white_24dp" />
    </LinearLayout>

    <!-- Direction/Status bar -->
    <TextView
        android:id="@+id/direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_header"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#F5F5F5"
        android:textColor="#555555"
        android:textSize="13sp"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Content area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/direction"
        android:background="#E8E8E8"
        android:padding="4dp">

        <!-- No arrivals message (shown when empty) -->
        <TextView
            android:id="@+id/no_arrivals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- LinearLayout for arrival cards -->
        <LinearLayout
            android:id="@+id/arrivals_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />
    </FrameLayout>
</RelativeLayout> 