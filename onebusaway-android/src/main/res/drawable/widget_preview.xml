<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Widget background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
            <size android:height="240dp" />
        </shape>
    </item>
    <!-- Header background -->
    <item android:top="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/theme_primary" />
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <size android:height="80dp" />
        </shape>
    </item>
    <!-- Content area -->
    <item android:top="96dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA" />
        </shape>
    </item>
</layer-list> 